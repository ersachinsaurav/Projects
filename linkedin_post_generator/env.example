# LinkedIn Post Generator - Environment Configuration
# ===================================================
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# IMPORTANT: Never commit .env to version control!
#
# This single .env file configures BOTH backend and frontend!

# =============================================================================
# BRANDING CONFIGURATION (Required for personalization)
# =============================================================================
# These settings are used by BOTH backend (image footers, hashtags) and
# frontend (LinkedIn preview, post cards).

# Backend branding (used for image generation, hashtags)
BRAND_NAME=Your Name
BRAND_HANDLE=@yourusername
BRAND_WEBSITE=yourwebsite.com
BRAND_LINKEDIN_URL=linkedin.com/in/yourusername
BRAND_INSTAGRAM_URL=instagram.com/yourusername

# Frontend branding (used for UI preview) - must have VITE_ prefix
# These should match the backend values above!
VITE_BRAND_NAME=Your Name
VITE_BRAND_HANDLE=@yourusername
VITE_BRAND_TITLE=Your Professional Title | Your Company
VITE_BRAND_VERIFIED=false
VITE_BRAND_WEBSITE=yourwebsite.com
VITE_BRAND_LINKEDIN_URL=linkedin.com/in/yourusername
VITE_BRAND_INSTAGRAM_URL=instagram.com/yourusername

# =============================================================================
# AWS CONFIGURATION (Required for Bedrock/Claude models)
# =============================================================================

# AWS Region for Bedrock
AWS_REGION=us-east-1

# AWS credentials are loaded from:
# 1. Environment variables (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY)
# 2. ~/.aws/credentials file
# 3. IAM role (if running on AWS)

# =============================================================================
# OLLAMA CONFIGURATION (Required for local text models)
# =============================================================================

# Ollama API URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# SDXL WEBUI CONFIGURATION (Required for local image generation)
# =============================================================================

# SDXL WebUI API URL (default: http://localhost:7860)
SDXL_WEBUI_URL=http://localhost:7860

# SDXL generation parameters
SDXL_STEPS=25
SDXL_SAMPLER=DPM++ 2M Karras
SDXL_CFG_SCALE=6.5
SDXL_WIDTH=900
SDXL_HEIGHT=1200

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# CORS origins (comma-separated, for frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:5170

# Session TTL in seconds (default: 1 hour)
SESSION_TTL_SECONDS=3600

# =============================================================================
# GENERATION LIMITS
# =============================================================================

# Maximum output tokens for text generation
MAX_TEXT_OUTPUT_TOKENS=4000

# Maximum images per request
MAX_IMAGES_PER_REQUEST=7

# Maximum image prompt length
MAX_IMAGE_PROMPT_LENGTH=1000
